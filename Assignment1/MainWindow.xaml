            <GradientStop Color="#FF3A3838" Offset="0.8" />
            <GradientStop Color="#FFF" Offset="1" />
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="gradientBrushSegmentedTabItem" StartPoint="0.5,0" EndPoint="0.5,1">
