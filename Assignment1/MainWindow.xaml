                    <DropShadowEffect/>
                </TabItem.Effect>
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="665*"/>
                        <ColumnDefinition Width="652*"/>
                    </Grid.ColumnDefinitions>
                    <Border BorderThickness="5,0,5,25" Height="628" Margin="0,0,25,0" VerticalAlignment="Center" CornerRadius="20" Background="White" Grid.Column="1" HorizontalAlignment="Right" Width="420">
                        <Border.BorderBrush>
                            <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                                <GradientStop Color="Black" Offset="0.813"/>
                                <GradientStop Color="White" Offset="0.183"/>
                            </LinearGradientBrush>
                        </Border.BorderBrush>
                        <Grid>
                            <Label Content="Staff name:" HorizontalAlignment="Left" Margin="20,82,0,0" VerticalAlignment="Top" FontFamily="Verdana" FontSize="18"/>
