                                <TextBox.Effect>
                                    <DropShadowEffect/>
                                </TextBox.Effect>
                            </TextBox>
                            <TextBox x:Name="txtStaffName" HorizontalAlignment="Left" Height="32" Margin="145,82,0,0" VerticalAlignment="Top" Width="245" TabIndex="1" FontSize="18" MaxLines="1" MaxLength="30" ToolTip="The name of the staff member">
                                <TextBox.Effect>
                                    <DropShadowEffect/>
                                </TextBox.Effect>
                            </TextBox>
                            <ListView x:Name="lviewQualifications" HorizontalAlignment="Center" ItemContainerStyle="{StaticResource CenterCellAlignmentStyle}" Height="300" Margin="0,243,0,0" VerticalAlignment="Top" Width="370" BorderBrush="White" Background="#FF3A3838" Foreground="White" BorderThickness="0" FontFamily="Trebuchet MS" FontSize="15" SelectionChanged="lviewQualifications_SelectionChanged"  SelectionMode="Single" ToolTip="A list of qualifications">
                                <ListView.View>
                                    <GridView>
                                        <GridViewColumn HeaderStringFormat="" Width="360" Header="Qualifications"/>
                                    </GridView>
                                </ListView.View>
                            </ListView>
                            <Button x:Name="btnNewStaff" IsDefault="True" Content="New Editable Staff Member" HorizontalAlignment="Center" VerticalAlignment="Top" Width="370" Margin="0,28,0,0" Background="#FF3A3838" Foreground="White" BorderThickness="0" Height="38" Click="btnNewStaff_Click"  TabIndex="10" ToolTip="Clears the controls and initiates the creation of a new staff member">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>
                            <Button x:Name="btnChangeStaff" IsDefault="True" Content="Apply Changes" VerticalAlignment="Top" Width="120" HorizontalAlignment="Center" Background="#FFC5C533" Foreground="White" BorderThickness="0" Height="38" Click="btnChangeStaff_Click"  TabIndex="10" IsEnabled="False" ToolTip="Applies the specified changes to the selected staff member" Margin="0,550,0,0">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>
                            <Button x:Name="btnAddStaff" IsDefault="True" Content="Add Staff (+)" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="270,550,0,0" Background="#FF62C533" Foreground="White" BorderThickness="0" Height="38" Click="btnAddStaff_Click"  TabIndex="10" ToolTip="Saves the staff member">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>
                            <Button x:Name="btnDeleteStaff" IsDefault="True" Content="Remove Staff" HorizontalAlignment="Left" VerticalAlignment="Top" Width="120" Margin="20,550,0,0" Background="#FFC53333" Foreground="White" BorderThickness="0" Height="38" Click="btnDeleteStaff_Click"  TabIndex="10" IsEnabled="False" ToolTip="Removes the selected staff member">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>
                        </Grid>
                    </Border>
                    <ListView x:Name="lviewStaff" HorizontalAlignment="Left" Height="628" Margin="25,0,0,0" VerticalAlignment="Center" Width="805" BorderBrush="White" Background="#FF040303" Foreground="#FF8D8989" BorderThickness="0" FontFamily="Trebuchet MS" FontSize="15" SelectionChanged="lviewStaff_SelectionChanged"  SelectionMode="Single" Grid.ColumnSpan="2" ToolTip="A list of staff. Select one to view or edit it">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn HeaderStringFormat="" Width="795" Header="Staff" DisplayMemberBinding="{Binding Name}"/>
                            </GridView>
                        </ListView.View>
                    </ListView>

                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
