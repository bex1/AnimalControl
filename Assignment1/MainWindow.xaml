                                <TextBlock.Effect>
                                    <DropShadowEffect/>
                                </TextBlock.Effect></TextBlock>
                            <TextBlock x:Name="txtblckAvailableIngredients" HorizontalAlignment="Right" TextWrapping="Wrap" VerticalAlignment="Center" Margin="0,0,30,0" Height="300" Width="200" Background="#FF3A3838" Foreground="White" FontFamily="Verdana" FontSize="10" Padding="10" ToolTip="Ingredients for the selected recipe">
                                <TextBlock.Effect>
                                    <DropShadowEffect/>
                                </TextBlock.Effect></TextBlock>
                            <Button x:Name="btnAddRecipeToAnimal" IsDefault="True" Content="Add (&lt;&lt;)" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,100,0,0" Background="#FF62C533" Foreground="White" BorderThickness="0" Height="38" Click="btnAddRecipeToAnimal_Click"  TabIndex="10" ToolTip="Associates the recpie to the right with selected animal above." IsEnabled="False">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>
                            <Button x:Name="btnDeleteAnimalRecipe" IsDefault="True" Content="Remove (&gt;&gt;)" HorizontalAlignment="Center" VerticalAlignment="Top" Width="120" Margin="0,200,0,0" Background="#FFC53333" Foreground="White" BorderThickness="0" Height="38" Click="btnDeleteAnimalRecipe_Click"  TabIndex="10" IsEnabled="False" ToolTip="Removes the selected recipe to the left">
                                <Button.Effect>
                                    <DropShadowEffect/>
                                </Button.Effect>
                            </Button>
                        </Grid>
                    </Border>
                </Grid>
            </TabItem>
            <TabItem x:Name="tabStaff" Header="Staff" Style="{DynamicResource ResourceKey=styleTabItemRight}" Width="140" Height="38">
