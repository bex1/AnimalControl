<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008" xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" mc:Ignorable="d" x:Class="Assignment1.MainWindow"
        Title="MainWindow" Height="700" Width="1000" ResizeMode="NoResize">
    <Window.Resources>
        <Style x:Key="CenterCellAlignmentStyle"
            TargetType="{x:Type ListViewItem}">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="HorizontalAlignment" Value="Stretch" />
        </Style>
    </Window.Resources>
    <Grid Background="#FF3A3838">
        <Border BorderThickness="5,0,5,25" Height="343" Margin="20,27,22,0" VerticalAlignment="Top" CornerRadius="20" Background="White">
            <Border.BorderBrush>
                <LinearGradientBrush EndPoint="0.5,1" MappingMode="RelativeToBoundingBox" StartPoint="0.5,0">
                    <GradientStop Color="Black" Offset="0.813"/>
                    <GradientStop Color="White" Offset="0.183"/>
                </LinearGradientBrush>
            </Border.BorderBrush>
            <Grid>
                <CheckBox x:Name="cbxListAll" Content="List All Animals" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="536,258,0,0" Checked="cbxListAll_Checked" Unchecked="cbxListAll_Unchecked"/>
                <ListBox x:Name="lboxAnimal" HorizontalAlignment="Left" Height="232" Margin="373,38,0,0" VerticalAlignment="Top" Width="143" Background="#FF3A3838" RenderTransformOrigin="0.5,0.5" BorderThickness="0" SelectionChanged="lboxAnimal_SelectionChanged" Foreground="White">
                    <ListBox.Effect>
                        <DropShadowEffect/>
                    </ListBox.Effect>
                </ListBox>
                <ListBox x:Name="lboxCategory" HorizontalAlignment="Left" Height="234" Margin="250,36,0,0" VerticalAlignment="Top" Width="100" Background="#FF3A3838" BorderThickness="3,3,0,0" SelectionChanged="lboxCategory_SelectionChanged" Foreground="White" BorderBrush="#FF3A3838" >
                    <ListBox.Effect>
                        <DropShadowEffect/>
                    </ListBox.Effect>
                </ListBox>
                <ListBox x:Name="lboxGender" HorizontalAlignment="Left" Height="118" Margin="60,152,0,0" VerticalAlignment="Top" Width="120" Background="#FF3A3838" BorderThickness="0" Foreground="White">
                    <ListBox.Effect>
                        <DropShadowEffect/>
                    </ListBox.Effect>
                </ListBox>
                <Ellipse x:Name="ellipseImage" HorizontalAlignment="Left" Height="107" StrokeThickness="3" VerticalAlignment="Top" Width="114" Margin="806,38,0,0">
                    <Ellipse.Stroke>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black" Offset="0.18"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Ellipse.Stroke>
                    <Ellipse.Fill>
                        <ImageBrush/>
                    </Ellipse.Fill>
                </Ellipse>
                <Label Content="Name:" HorizontalAlignment="Left" Margin="10,36,0,0" VerticalAlignment="Top" FontFamily="Verdana"/>
                <TextBox x:Name="txtName" HorizontalAlignment="Left" Height="23" Margin="60,38,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120">
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>
                <TextBox x:Name="txtAge" HorizontalAlignment="Left" Height="23" Margin="60,80,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" PreviewTextInput="txtAge_PreviewTextInput">
                    <TextBox.Effect>
                        <DropShadowEffect/>
                    </TextBox.Effect>
                </TextBox>
                <Label Content="Age:" HorizontalAlignment="Left" Margin="22,80,0,0" VerticalAlignment="Top" FontFamily="Verdana"/>
                <Label Content="Gender" HorizontalAlignment="Left" Margin="90,122,0,0" VerticalAlignment="Top" FontFamily="Verdana"/>
                <Label Content="Animal" HorizontalAlignment="Left" Margin="419,8,0,0" VerticalAlignment="Top" FontFamily="Verdana"/>
                <Label Content="Category" HorizontalAlignment="Left" Margin="270,13,0,0" VerticalAlignment="Top" FontFamily="Verdana"/>
                <Expander x:Name="expSpecifications" Header="Specifications" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="536,14,0,0" FontFamily="Verdana" IsEnabled="False">
                    <Grid Background="#FFE5E5E5">
                        <Rectangle Fill="White" HorizontalAlignment="Left" Height="210" Stroke="#FF7A7979" VerticalAlignment="Top" Width="246" Margin="0,0,-76,-149" StrokeThickness="2">
                            <Rectangle.Effect>
                                <DropShadowEffect/>
                            </Rectangle.Effect>
                        </Rectangle>
                        <Label x:Name="lblCategorySpecific" Content="Category specific:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="10,10,0,0" VerticalAlignment="Top" FontFamily="Verdana" Width="123"/>
                        <Label x:Name="lblAnimalSpecific" Content="Animal specific:" HorizontalAlignment="Left" HorizontalContentAlignment="Right" Margin="10,58,0,-22" VerticalAlignment="Top" FontFamily="Verdana" Width="123" RenderTransformOrigin="0.5,0.5">
                            <Label.RenderTransform>
                                <TransformGroup>
                                    <ScaleTransform/>
                                    <SkewTransform/>
                                    <RotateTransform Angle="0.631"/>
                                    <TranslateTransform/>
                                </TransformGroup>
                            </Label.RenderTransform>
                        </Label>
                        <TextBox x:Name="txtCategorySpecific" HorizontalAlignment="Left" Height="23" Margin="138,10,-60,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="92">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                        </TextBox>
                        <TextBox x:Name="txtAnimalSpecific" HorizontalAlignment="Left" Height="23" Margin="138,58,-60,-20" TextWrapping="Wrap" VerticalAlignment="Top" Width="92">
                            <TextBox.Effect>
                                <DropShadowEffect/>
                            </TextBox.Effect>
                        </TextBox>
                    </Grid>
                </Expander>
                <Button x:Name="btnUpload" Content="Upload image" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Margin="806,168,0,0" Background="#FF3A3838" Foreground="White" BorderThickness="0" Height="38" Click="btnUpload_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
                <Button x:Name="btnAdd" Content="Add" HorizontalAlignment="Left" VerticalAlignment="Top" Width="114" Margin="806,232,0,0" Background="#FF62C533" Foreground="White" BorderThickness="0" Height="38" Click="btnAdd_Click">
                    <Button.Effect>
                        <DropShadowEffect/>
                    </Button.Effect>
                </Button>
            </Grid>
        </Border>
        <ListView x:Name="lviewAnimals" HorizontalAlignment="Left" ItemContainerStyle="{StaticResource CenterCellAlignmentStyle}" Height="257" Margin="20,387,0,0" VerticalAlignment="Top" Width="941" BorderBrush="White" Background="#FF040303" Foreground="#FF8D8989" BorderThickness="0" FontFamily="Trebuchet MS" FontSize="15">
            <ListView.View>
                <GridView>
                    <GridViewColumn HeaderStringFormat="" Width="100" Header="ID" DisplayMemberBinding="{Binding ID}"/>
                    <GridViewColumn Header="Name" Width="200" DisplayMemberBinding="{Binding Name}"/>
                    <GridViewColumn Header="Age" Width="50" DisplayMemberBinding="{Binding Age}"/>
                    <GridViewColumn Header="Gender" Width="100" DisplayMemberBinding="{Binding Gender}"/>
                    <GridViewColumn Header="Special characteristics" Width="500" DisplayMemberBinding="{Binding SpecialCharacteristics}"/>
                </GridView>
            </ListView.View>
        </ListView>

    </Grid>
</Window>
