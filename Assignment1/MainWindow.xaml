                    <DropShadowEffect/>
                </TabItem.Effect>
                <Grid >
                    <ListView x:Name="lviewRecipeAnimals" HorizontalAlignment="Center" ItemContainerStyle="{StaticResource CenterCellAlignmentStyle}" Height="217" VerticalAlignment="Top" Width="1286" Margin="0,30,0,0" BorderBrush="White" Background="#FF040303" Foreground="#FF8D8989" BorderThickness="0" FontFamily="Trebuchet MS" FontSize="15" SelectionChanged="lviewRecipeAnimals_SelectionChanged"  SelectionMode="Single" ToolTip="Select an animal to view/edit the associated recipes">
